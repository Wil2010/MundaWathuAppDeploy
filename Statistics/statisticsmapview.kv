#:import MapView kivy_garden.mapview.MapView
#:import GpsBlinker gpsblinker.GpsBlinker

<StatisticsMapView>:
    zoom: 6
    double_tap_zoom: True
    on_zoom:
        self.zoom = 6 if self.zoom < 6 else self.zoom # set minimum zoom = 6

    GpsBlinker:
        lat: root.lat
        lon: root.lon
        id: statisticsblinker