#:import utils kivy.utils

<StatisticsScreen>:
    FloatLayout:
        GridLayout:
            cols: 1
            id: statisticsbackdrop
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .7
        MDToolbar:
            title: "Map Of Malawi"
            id: statisticstoolbar
            md_bg_color: app.theme_cls.primary_light
            pos_hint: {"top": .205, "left": 1}
            size_hint: 1, .1
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: "[u]Back[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.change_screen("home_screen", direction='left', mode='pop')
            LabelButton:
                text: "[u]Occupation[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen("occupationmap_screen", direction='right', mode='push')
            LabelButton:
                text: "[u]Population[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("populationmap_screen", direction='left', mode='push')
