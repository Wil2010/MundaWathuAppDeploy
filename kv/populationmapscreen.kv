#:import utils kivy.utils

<PopulationMapScreen>:
    FloatLayout:
        GridLayout:
            cols: 1
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .795
            StencilView:
                id: stencil
                Scatter:
                    id: scatter
                    pos: stencil.pos
                    size: my_image.size
                    on_touch_down: app.touch_event(args[1])
                    AsyncImage:
                        id: my_image
                        source: 'Population-1.png'
                        allow_stretch: True
                        keep_ratio: True
                        size: stencil.width, stencil.height
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            ImageButton:
                source: "icons/back.png"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.change_screen("statistics_screen", direction='left', mode='pop')
