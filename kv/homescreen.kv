#:import utils kivy.utils
#:include homemapview.kv

<HomeScreen>:
    FloatLayout:
        MDToolbar:
            title: "Search Area"
            right_action_items: [['magnify', lambda x: app.search_menu.open()]]
            md_bg_color: app.theme_cls.primary_light
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .1
        HomeMapView:
            pos_hint: {"top": .795, "left": 1}
            size_hint: 1, .695
            id: mapview
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: "[u]Climate[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.change_screen("climate_screen", direction='right', mode='push')
            LabelButton:
                text: "[u]Statistics[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen("statistics_screen", direction='up', mode='push')
